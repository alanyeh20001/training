<div class="col-xs-12">
  <%= render "auth" %>
  
  <div class="group">
    <%= link_to("New Group", new_group_path, class: "btn btn-mini btn-default pull-right") %>
  </div>
  
  <div class="test">Test if "Touch restart.txt" works!!!!!!!!!!!!!</div>

  <table class="table">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(render_group_title(group), group_path(group)) %></td>
          <td><%= group.description %></td>
          <td><%= render_group_manage_button(group) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
