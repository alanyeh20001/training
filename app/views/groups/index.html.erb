<div class="col-xs-12">
  <%= render "auth" %>
  
  <div class="group">
    <%= link_to("New Group", new_group_path, class: "btn btn-mini btn-default pull-right") %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(truncate(group.title, length: 25), group_path(group)) %></td>
          <td><%= group.description %></td>
          <% if current_user && group.editable_by?(current_user) %>
            <td>
              <%= link_to("Edit", edit_group_path(group), class: "btn btn-mini") %>
              <%= link_to("Delete", group_path(group), class: "btn btn-mini", method: :delete, data: { confirm: "Are you sure???" }) %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
