<div class="col-sm-10 col-sm-offset-1">
  <%= render "auth" %>

  <div class="group pull-right">
    <% if current_user && @group.editable_by?(current_user) %>
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-md btn-default") %>
    <% end %>
    <%= link_to("New Post", new_group_post_path(@group), class: "btn btn-md btn-default") %>
  </div>

  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <table class="table">
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= link_to("Edit", edit_group_post_path(post.group, post), class: "btn btn-sm") %></td>
          <td><%= link_to("Delete", group_post_path(post.group, post), class: "btn btn-sm", method: :delete, data: { confirm: "Are you sure???"}) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
